<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddLocationReview_Activity">

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="28dp"
        android:background="@android:drawable/editbox_background"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:drawableRight="@drawable/ic_baseline_arrow_drop_down_24"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:text="Select Monument"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:id="@+id/fiveStars"
        android:numStars="5"
        android:rating="0"
        android:stepSize="0.5"
        android:isIndicator="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view" />

    <EditText
        android:id="@+id/Comment"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="148dp"
        android:textColorHighlight="#7cff88"
        android:inputType="text"
        android:hint="@string/add_your_comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiveStars" />

    <Button
        android:id="@+id/AddMoreLocations"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:enabled="true"
        android:text="@string/add_more_locations"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Comment"
        app:layout_constraintVertical_bias="0.138" />

    <Button
        android:id="@+id/SuggestButton"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:enabled="true"
        android:text="Suggest"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Comment"
        app:layout_constraintVertical_bias="0.614" />

    <Button
        android:id="@+id/Continue"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:enabled="true"
        android:text="@string/AddLocation"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.247"
        app:layout_constraintStart_toEndOf="@+id/AddMoreLocations"
        app:layout_constraintTop_toBottomOf="@+id/Comment"
        app:layout_constraintVertical_bias="0.138" />

    <Button
        android:id="@+id/SKIP"
        android:layout_width="137dp"
        android:layout_height="53dp"
        android:enabled="true"
        android:text="MAP"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.246"
        app:layout_constraintStart_toEndOf="@+id/AddMoreLocations"
        app:layout_constraintTop_toBottomOf="@+id/Comment"
        app:layout_constraintVertical_bias="0.616" />


</androidx.constraintlayout.widget.ConstraintLayout>